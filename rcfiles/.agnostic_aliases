# -*-shell-script-*-
##
# YSC aliases
#

#
## === GNU TOOLS ===
#
# ls
alias ls='/bin/ls --color=auto'
alias l='ls -CF'
alias ll='ls -alhF'
# grep
alias grep='/bin/grep --color=auto'
alias ngrep='grep --line-number'
alias rgrep='ngrep --recursive'
# cd+...
cdn() { mkdir -p "${1}" && cd "${1}"; }
cdtmp() { cd $(mktemp -d); }
# which / command
alias which='command -v'

# backup
function bak () {
	cp "$1" "$1.bak-$(date +'%Y%m%d-%H%M%S')"
}


#
## === DEVELOPMENT ===
#
alias json='python3 -m json.tool' # pretty print json strings from stdin to stdout


#
## === WRITTING ===
#
# pdflatex
pdflatex="pdflatex -file-line-error -interaction nonstopmode"


#
## === MULTIMEDIA ===
#
# Fetch fiting subtitles
alias subtitles-eng="filebot -get-subtitles"
alias subtitles-fra="subtitles-eng --lang fr"
# Fetch second best subtitles
alias subtitles-second-best-eng="subtitles-eng -non-strict"
alias subtitles-second-best-fra="subtitles-fra -non-strict"
